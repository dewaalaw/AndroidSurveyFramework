<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="PickerEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/picker_edit_text_font</item>
        <item name="android:textColor">@color/picker_edit_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="PickerHintText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/picker_hint_text_font</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
