<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="PickerEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">@dimen/picker_edit_text_font</item>
        <item name="android:textColor">@color/picker_edit_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="PickerHintText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/picker_hint_text_font</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="PickerSeparatorLabel">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/picker_separator_text_size</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="LoginLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="LoginScreenHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/login_app_name_header</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#3399FF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="LoginSubmitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
