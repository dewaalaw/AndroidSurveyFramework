<com.example.jaf50.survey.ui.DatePickerComponent xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
                                                 android:orientation="horizontal"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bootstrap:bb_icon_left="fa-calendar"
        android:text="Select Date"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/monthEditText"
            style="@style/PickerEditText"
            android:maxLength="2"
            android:minEms="2"/>

        <TextView
            style="@style/PickerHintText"
            android:text="MM"/>
    </LinearLayout>


    <TextView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="6dp"
        android:text="/"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/dayEditText"
            style="@style/PickerEditText"
            android:maxLength="2"
            android:minEms="2"/>

        <TextView
            style="@style/PickerHintText"
            android:text="DD"/>
    </LinearLayout>


    <TextView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="6dp"
        android:text="/"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/yearEditText"
            style="@style/PickerEditText"
            android:maxLength="4"
            android:minEms="3"/>

        <TextView
            style="@style/PickerHintText"
            android:text="YYYY"/>
    </LinearLayout>


</com.example.jaf50.survey.ui.DatePickerComponent>