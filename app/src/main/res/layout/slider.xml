<?xml version="1.0" encoding="utf-8"?>
<com.example.jaf50.survey.ui.SliderComponent xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical">

    <com.example.jaf50.survey.ui.SurveySeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"/>

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftLabelTextView"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="Left"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightLabelTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Right"
            android:textSize="16dp"/>
    </RelativeLayout>
</com.example.jaf50.survey.ui.SliderComponent>