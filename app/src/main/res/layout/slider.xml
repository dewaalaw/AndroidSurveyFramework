<?xml version="1.0" encoding="utf-8"?>
<com.askonthego.ui.SliderComponent xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical">

    <com.askonthego.ui.SurveySeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"/>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0px"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:id="@+id/leftLabelTextView"
            android:layout_marginLeft="5dp"
            android:text="Left"
            android:textSize="18dp"/>

        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight=".2"/>

        <TextView
            android:layout_width="0px"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:id="@+id/rightLabelTextView"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="Right"
            android:textSize="18dp"/>
    </LinearLayout>

</com.askonthego.ui.SliderComponent>