<com.example.jaf50.survey.ui.TimePickerComponent xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
                                                 android:orientation="vertical"
                                                 android:layout_width="wrap_content"
                                                 android:gravity="center_horizontal"
                                                 android:layout_height="wrap_content">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bootstrap:bb_icon_left="fa-clock-o"
        android:text="Select Time"
        android:layout_marginBottom="6dp"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/hourEditText"
                style="@style/PickerEditText"
                android:maxLength="2"
                android:minEms="2"/>

            <TextView
                style="@style/PickerHintText"
                android:text="HH"/>
        </LinearLayout>

        <TextView
            style="@style/PickerSeparatorLabel"
            android:layout_marginTop="-5dp"
            android:text=":"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/minuteEditText"
                style="@style/PickerEditText"
                android:maxLength="2"
                android:minEms="2"/>

            <TextView
                style="@style/PickerHintText"
                android:text="MM"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/amPmSpinner"
            android:layout_marginLeft="6dp"
            android:background="@drawable/spinner_selected_item_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</com.example.jaf50.survey.ui.TimePickerComponent>