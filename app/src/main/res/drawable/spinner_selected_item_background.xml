<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke android:width="2dp" android:color="@color/bbutton_primary"/>
                    <corners android:radius="5dip"/>
                    <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <bitmap android:src="@drawable/black_triangle" android:gravity="bottom|right"/>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bbutton_edittext_disabled"/>
                    <stroke android:width="1dp" android:color="@color/bbutton_edittext_border"/>
                    <corners android:radius="5dip"/>
                    <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/disabled_triangle" android:gravity="bottom|right"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke android:width="1dp" android:color="@color/bbutton_primary"/>
                    <corners android:radius="5dip"/>
                    <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <bitmap android:src="@drawable/black_triangle" android:gravity="bottom|right"/>
            </item>
        </layer-list>
    </item>
</selector>